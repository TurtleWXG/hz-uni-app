.btn-box {
  padding: 50rpx 60rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 150px;
}
.btn-box .list-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 30rpx 40rpx;
    background-color: #fff;
    box-shadow: 3px 3px 8px 3px rgba(210, 210, 210, 0.7);
    border-radius: 10rpx;
    margin-bottom: 40rpx;
    color: #333;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.btn-box .list-box:active {
      background-color: rgba(240, 240, 240, 0.7);
}
.btn-box .list-box image {
      width: 100rpx;
      height: 100rpx;
      margin-right: 30rpx;
}
.btn-box .list-box .title {
      font-size: 36rpx;
      margin-bottom: 5px;
}
.btn-box .list-box .grey {
      color: #666;
}


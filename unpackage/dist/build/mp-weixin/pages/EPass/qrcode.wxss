page, .content {
  height: 100%;
  background: #fff;
}
page image, .content image {
    height: 100%;
    width: 100%;
}
page .top-box, .content .top-box {
    position: fixed;
    z-index: 10;
    top: 0;
    left: 0;
    right: 0;
    padding-top: 20px;
    text-align: center;
}
page .top-box view, .content .top-box view {
      margin-bottom: 15px;
}
page .top-box .code-box, .content .top-box .code-box {
      width: 260px;
      margin: 20px auto 40px;
      padding: 10px;
      background: #fff;
}
page .top-box .btn-box, .content .top-box .btn-box {
      text-align: center;
      margin-bottom: 0;
      margin-top: 10px;
}
page .top-box .btn-box view, .content .top-box .btn-box view {
        display: inline-block;
        width: 215px;
        height: 40px;
        line-height: 40px;
        border-radius: 70px;
        color: #fff;
}
page .top-box .btn-blue view, .content .top-box .btn-blue view {
      background-color: #87f50a;
}
page .top-box .btn-red view, .content .top-box .btn-red view {
      background-color: #fb3606;
}
page .top-box .btn-explain, .content .top-box .btn-explain {
      color: #fc5636;
}
page .top-box .input-box, .content .top-box .input-box {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      background: #fff;
      margin: 0 30px 10px;
      padding: 0 10px;
      border-radius: 5px;
}
page .top-box .input-box view, .content .top-box .input-box view {
        margin-bottom: 0;
        padding: 8px 0;
}
page .top-box .input-box .label, .content .top-box .input-box .label {
        color: #3560ca;
        width: calc(4em + 5px);
        text-align: justify;
        margin-right: 10px;
}
page .top-box .input-box .text, .content .top-box .input-box .text {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
            -ms-flex: 1;
                flex: 1;
        text-align: left;
}

